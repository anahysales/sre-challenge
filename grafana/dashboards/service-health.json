          },
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "max"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "sum(rate(payment_operations_total[5m]))",
          "refId": "A",
          "legendFormat": "operations/sec"
        }
