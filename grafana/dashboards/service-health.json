        "overrides": []
      },
      "options": {
        "legend": {
          "calcs": [
            "mean",
            "max"
          ],
          "displayMode": "table",
          "placement": "bottom"
        }
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.99, rate(payment_request_duration_seconds_bucket[5m])) * 1000",
          "refId": "D",
          "legendFormat": "p99 latency"
        }
      ]
    }
  ]
