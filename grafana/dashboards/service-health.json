      "type": "timeseries",
      "title": "Payment Operations Rate (ops/sec)",
      "datasource": "Prometheus",
      "fieldConfig": {
        "defaults": {
          "custom": {
            "hideFrom": {
              "tooltip": false,
              "viz": false,
              "legend": false
